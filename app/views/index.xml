<Alloy>
	<SplitWindow platform="ios" formFactor="tablet">
	<Window id="nav">
		<Label>This is the nav</Label>
		<ScrollView id="scroll">
		</ScrollView>
	</Window>
	<Window>
		<Label>This is the detail</Label>
		<Popover id="popover" height='110' width='250' arrowDirection='Ti.UI.iPad.POPOVER_ARROW_DIRECTION_DOWN'>
	        <ContentView height='110' width='250' >
				<NavigationWindow>
	        	<Window height='110' width='250' id="popoverTitle">
					<ImageView id="profilePic" width="80" height="80" left="0"></ImageView>
					<Label id="twitterName" width="140" top="30" left="120" color="black" height="30"></Label>
					<Label id="location"  color='black' left="120" width="140" top="60" height="30"></Label>
	        	</Window>
	            </NavigationWindow>
	        </ContentView>
	    </Popover>
		<ImageView id="mainImage"></ImageView>
	</Window>
	</SplitWindow>	
</Alloy>